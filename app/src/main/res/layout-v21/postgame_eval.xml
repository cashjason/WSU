<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thirdtohome"
    android:backgroundTint="@color/background_green"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/postgame_evaluation"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/r_relaxation_level" />

            <TextView
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/q1" />

            <SeekBar
                android:id="@+id/seekBar2"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:max="9"
                android:progress="4"
                android:visibility="visible"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/d2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a_amp_level" />

            <TextView
                android:id="@+id/q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/q2" />

            <SeekBar
                android:id="@+id/seekBar6"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/d3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/i_imagine_before_action" />

            <TextView
                android:id="@+id/q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/q3" />

            <SeekBar
                android:id="@+id/seekBar4"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/d4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/d_dominate_this_moment" />

            <TextView
                android:id="@+id/q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/q4" />

            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/d5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_embrace_advirsity" />

            <TextView
                android:id="@+id/q5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/q5" />

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4"
                android:visibility="visible" />

            <TextView
                android:id="@+id/d6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/r_routines" />

            <TextView
                android:id="@+id/q6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/string_q6" />

            <SeekBar
                android:id="@+id/seekBar5"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <Button
                android:id="@+id/submitBtn"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
