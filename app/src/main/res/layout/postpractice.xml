<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hometofirst"
    android:backgroundTint="@color/background_green"
    android:backgroundTintMode="src_over"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@drawable/diamyn_headerb" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="Post Practice Evaluation"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R = Relaxation Level"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="q1" />

            <SeekBar
                android:id="@+id/Rseek"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:max="9"
                android:progress="4"
                android:visibility="visible" />

            <TextView
                android:id="@+id/d2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A = Amp Level"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="q2" />

            <SeekBar
                android:id="@+id/Aseek"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/d3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I = Imagine Before Action"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="q3" />

            <SeekBar
                android:id="@+id/Iseek"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/d4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D = Dominate THIS Moment"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="q4"
                android:layout_weight="2.01" />

            <SeekBar
                android:id="@+id/Dseek"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/d5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E = Embrace Advirsity"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/q5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="q5" />

            <SeekBar
                android:id="@+id/Eseek"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4"
                android:visibility="visible" />

            <TextView
                android:id="@+id/d6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R = Routines"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/q6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="q6" />

            <SeekBar
                android:id="@+id/R2seek"
                style="@style/SeekStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="9"
                android:progress="4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes:" />

            <EditText
                android:id="@+id/notesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:ems="10"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/submitBtn"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
